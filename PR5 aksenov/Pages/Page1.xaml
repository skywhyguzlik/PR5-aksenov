<Page x:Class="PR5_aksenov.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR5_aksenov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Вычисление функции a" 
               FontSize="24" FontWeight="Bold" 
               HorizontalAlignment="Center" Margin="0,20,0,20"
               Foreground="#FF2C3E50"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10" 
            Margin="50" Padding="30" 
            BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <Border Grid.Row="0" Background="#FFF8F9FA" 
                    CornerRadius="5" Padding="15" 
                    BorderBrush="#FFE0E0E0" BorderThickness="1">
                    <Image Source="C:\Users\234956\source\repos\PR5 aksenov\PR5 aksenov\images\form1.png" Stretch="Uniform" Height="80"
                       ToolTip="a = ln(y^(-√|x|)) · (x - y/2) + sin²(arctg(z))"/>
                </Border>

               
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="x =" FontSize="16" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtX" Grid.Column="1" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"
                         ToolTip="Введите значение x"/>

                    <TextBlock Grid.Column="3" Text="y =" FontSize="16" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtY" Grid.Column="4" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"
                         ToolTip="Введите значение y (должно быть > 0)"/>

                    <TextBlock Grid.Column="6" Text="z =" FontSize="16" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtZ" Grid.Column="7" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"
                         ToolTip="Введите значение z"/>
                </Grid>

                <!-- Результат -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Ответ =" FontSize="16" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtResult" Grid.Column="1" Height="35" 
                         FontSize="14" VerticalContentAlignment="Center"
                         IsReadOnly="True" Background="#FFF0F0F0"
                         ToolTip="Результат вычисления"/>
                </Grid>

                
                <StackPanel Grid.Row="4" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Вычислить" Width="150" Height="45" 
                        FontSize="16" Click="Calculate_Click"
                        Background="#FF3498DB" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Нажмите для вычисления функции">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF3498DB"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Очистить" Width="150" Height="45" 
                        FontSize="16" Click="Clear_Click" Margin="20,0,0,0"
                        Background="#FF95A5A6" Foreground="White"
                        BorderThickness="0" Cursor="Hand"
                        ToolTip="Нажмите для очистки всех полей">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF95A5A6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                
                <TextBlock Grid.Row="6" TextAlignment="Center" 
                       FontSize="14" Foreground="#FF7F8C8D" TextWrapping="Wrap">
                <Run Text="Формула: a = ln(y^(-√|x|)) · (x - y/2) + sin²(arctg(z))"/>
                </TextBlock>

                
                <Border Grid.Row="8" Background="#FFFFF9E6" 
                    CornerRadius="5" Padding="10" 
                    BorderBrush="#FFFFC107" BorderThickness="1">
                    <TextBlock TextWrapping="Wrap" FontSize="12" 
                           Foreground="#FF856404">
                    <Run Text="Примечание: y должен быть больше 0 для корректного вычисления ln(y^(-√|x|))"/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
