<Page x:Class="PR5_aksenov.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR5_aksenov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid Background="#FFF5F5F5" Margin="0,-72,0,-268">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Вычисление функции y с графиком" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"
                   Foreground="#FF2C3E50"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10" 
                Margin="30,17,30,22" Padding="20" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    <Border Grid.Row="0" Background="#FFF8F9FA" 
                            CornerRadius="5" Padding="15" 
                            BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <StackPanel>
                            <Image Source="C:\Users\234956\source\repos\PR5 aksenov\PR5 aksenov\images\form3.png" Stretch="Uniform" Height="60"
                                   ToolTip="y = x⁴ + cos(2 + x³ - b)"/>
                            
                        </StackPanel>
                    </Border>

                    
                    <Border Grid.Row="2" Background="#FFE8F5E9" 
        CornerRadius="5" Padding="15" 
        BorderBrush="#FF4CAF50" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Параметры функции:" 
                 FontSize="14" FontWeight="Bold" 
                 Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="x₀:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="txtX0" Grid.Row="0" Grid.Column="1" Text="4.6" VerticalAlignment="Center" Padding="3"/>

                                <TextBlock Grid.Row="0" Grid.Column="3" Text="xₖ:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="txtXk" Grid.Row="0" Grid.Column="4" Text="5.8" VerticalAlignment="Center" Padding="3"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="dx:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="txtDx" Grid.Row="2" Grid.Column="1" Text="0.2" VerticalAlignment="Center" Padding="3"/>

                                <TextBlock Grid.Row="2" Grid.Column="3" Text="b:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="txtB" Grid.Row="2" Grid.Column="4" Text="1.3" VerticalAlignment="Center" Padding="3"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                   
                    <StackPanel Grid.Row="3" Margin="0,15,0,0">
                        <Button Content="Вычислить" Height="45" 
                                FontSize="16" Click="Calculate_Click"
                                Background="#FF3498DB" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                ToolTip="Нажмите для вычисления и построения графика">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF3498DB"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Очистить" Height="45" 
                                FontSize="16" Click="Clear_Click" Margin="0,10,0,0"
                                Background="#FF95A5A6" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                ToolTip="Нажмите для очистки результатов">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF95A5A6"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF7F8C8D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    
                    <Border Grid.Row="5" Background="#FFF8F9FA" 
                            CornerRadius="5" Padding="10" 
                            BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="Результаты вычислений:" 
                                 FontSize="14" FontWeight="Bold"/>
                    </Border>

                    <Border Grid.Row="7" Background="White" 
                            CornerRadius="5" Padding="5" 
                            BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="txtResults" 
                                   TextWrapping="Wrap" 
                                   IsReadOnly="True"
                                   BorderThickness="0"
                                   Background="Transparent"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   ToolTip="Значения x и y"/>
                        </ScrollViewer>
                    </Border>
                </Grid>

                
                <Border Grid.Column="1" Background="#FFF8F9FA" 
                        CornerRadius="5" Padding="15" Margin="15,0,0,0"
                        BorderBrush="#FFE0E0E0" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="График функции" 
                                 FontSize="16" FontWeight="Bold" 
                                 HorizontalAlignment="Center" Margin="0,0,0,15"
                                 Foreground="#FF2C3E50"/>

                        
                        <Border Grid.Row="1" Background="White" 
                                BorderBrush="#FFCCCCCC" BorderThickness="1">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" 
                                          VerticalScrollBarVisibility="Disabled">
                                <Canvas x:Name="GraphCanvas" 
                                        Width="600" Height="400"
                                        Background="White"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
