<Page x:Class="PR5_aksenov.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR5_aksenov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Вычисление функции e" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,20,0,20"
                   Foreground="#FF2C3E50"/>

        <Border Grid.Row="1" Background="White" CornerRadius="10" 
                Margin="50" Padding="30" 
                BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <Border Grid.Row="0" Background="#FFF8F9FA" 
                        CornerRadius="5" Padding="15" 
                        BorderBrush="#FFE0E0E0" BorderThickness="1">
                    <Image Source="C:\Users\234956\source\repos\PR5 aksenov\PR5 aksenov\images\form2.png" Stretch="Uniform" Height="160"
                           ToolTip="Кусочно-заданная функция e"/>
                </Border>

               
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="x =" FontSize="16" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtX" Grid.Column="1" Height="35" 
                             FontSize="14" VerticalContentAlignment="Center"
                             ToolTip="Введите значение x"/>

                    <TextBlock Grid.Column="3" Text="i (нечетное/четное) =" FontSize="16" 
                               VerticalAlignment="Center" Margin="0,0,10,0" TextWrapping="Wrap"/>
                    <TextBox x:Name="txtI" Grid.Column="4" Height="35" 
                             FontSize="14" VerticalContentAlignment="Center"
                             ToolTip="Введите значение i (для определения чётности)"/>
                </Grid>

                
                <GroupBox Grid.Row="3" Header="Выберите функцию f(x)" 
                          FontSize="16" FontWeight="Bold" 
                          Margin="0,20,0,0" Padding="15">
                    <StackPanel>
                        <RadioButton x:Name="rbSinh" Content="sh(x) - гиперболический синус" 
                                   FontSize="14" Margin="0,5" GroupName="Function"
                                   IsChecked="True"
                                   ToolTip="f(x) = sh(x) = (e^x - e^(-x))/2"/>
                        <RadioButton x:Name="rbSquare" Content="x²" 
                                   FontSize="14" Margin="0,5" GroupName="Function"
                                   ToolTip="f(x) = x²"/>
                        <RadioButton x:Name="rbExp" Content="e^x" 
                                   FontSize="14" Margin="0,5" GroupName="Function"
                                   ToolTip="f(x) = e^x"/>
                    </StackPanel>
                </GroupBox>

                
                <Grid Grid.Row="4" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Ответ =" FontSize="16" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtResult" Grid.Column="1" Height="35" 
                             FontSize="14" VerticalContentAlignment="Center"
                             IsReadOnly="True" Background="#FFF0F0F0"
                             ToolTip="Результат вычисления"/>
                </Grid>

                
                <StackPanel Grid.Row="5" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Вычислить" Width="150" Height="45" 
                            FontSize="16" Click="Calculate_Click"
                            Background="#FF3498DB" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Нажмите для вычисления функции">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF3498DB"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Очистить" Width="150" Height="45" 
                            FontSize="16" Click="Clear_Click" Margin="20,0,0,0"
                            Background="#FF95A5A6" Foreground="White"
                            BorderThickness="0" Cursor="Hand"
                            ToolTip="Нажмите для очистки всех полей">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF95A5A6"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                
                <TextBlock Grid.Row="6" TextAlignment="Center" 
                           FontSize="13" Foreground="#FF7F8C8D" TextWrapping="Wrap">
                    <Run Text="i√f(x), если i - нечётное, x > 0"/>
                    <LineBreak/>
                    <Run Text="i/2·√|f(x)|, если i - чётное, x &lt; 0"/>
                    <LineBreak/>
                    <Run Text="√|if(x)|, иначе"/>
                </TextBlock>

                
                <Border Grid.Row="8" Background="#FFFFF9E6" 
                        CornerRadius="5" Padding="10" 
                        BorderBrush="#FFFFC107" BorderThickness="1">
                    <TextBlock TextWrapping="Wrap" FontSize="12" 
                               Foreground="#FF856404">
                        <Run Text="Примечание: Выберите функцию f(x) из списка радиокнопок. Значение i используется для определения условий кусочно-заданной функции."/>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
